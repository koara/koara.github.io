      &lt;<span class="pl-ent">li</span>&gt;Item 2B&lt;/<span class="pl-ent">li</span>&gt;
    &lt;/<span class="pl-ent">ul</span>&gt;
  &lt;/<span class="pl-ent">li</span>&gt;
&lt;/<span class="pl-ent">ul</span>&gt;

&lt;<span class="pl-ent">ol</span>&gt;
  &lt;<span class="pl-ent">li</span>&gt;Item 1&lt;/<span class="pl-ent">li</span>&gt;
  &lt;<span class="pl-ent">li</span>&gt;
    &lt;<span class="pl-ent">p</span>&gt;Item 2&lt;/<span class="pl-ent">p</span>&gt;
    &lt;<span class="pl-ent">ol</span>&gt;
      &lt;<span class="pl-ent">li</span>&gt;Item 2A&lt;/<span class="pl-ent">li</span>&gt;
